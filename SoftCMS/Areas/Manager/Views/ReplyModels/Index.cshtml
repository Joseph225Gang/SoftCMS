@model IEnumerable<SoftCMS.Models.ReplyModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SoftLayout.cshtml";
}

<h2>回文列表</h2>

<table class="table" id="article_view" style="color:white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.mainArticle.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticelMaker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublichDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateUser)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.mainArticle.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticelMaker)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublichDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateUser)
        </td>
        <td>
            @Html.ActionLink("刪除", "Delete", new { id=item.ID }, new { onclick = "return confirm('確定要刪除嗎?');" }) |
        </td>
    </tr>
}

</table>
@Html.ActionLink("管理帳號首頁", "Index", "Users")
